<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView android:text="@string/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/title_text"/>

            <Button
                android:text="@string/spotify"
                style="@style/buttonTheme"
                android:id="@+id/spotifyButton"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:layout_width="230dp"/>

            <Button
                android:text="@string/scores"
                style="@style/buttonTheme"
                android:id="@+id/scoresButton"
                android:layout_marginTop="15dp"
                android:layout_width="230dp" />

            <Button
                android:text="@string/library"
                style="@style/buttonTheme"
                android:id="@+id/libraryButton"
                android:layout_marginTop="15dp"
                android:layout_width="230dp" />

            <Button
                android:text="@string/build_bigger"
                style="@style/buttonTheme"
                android:id="@+id/buildButton"
                android:layout_marginTop="15dp"
                android:layout_width="230dp" />

            <Button
                android:text="@string/xyz_reader"
                style="@style/buttonTheme"
                android:id="@+id/xyzButton"
                android:layout_marginTop="15dp"
                android:layout_width="230dp" />

            <Button
                android:text="@string/capstone"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:id="@+id/capstoneButton"
                android:background="@color/palegreen"
                android:padding="10dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>


    </ScrollView>
</RelativeLayout>
